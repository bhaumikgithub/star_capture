<div class="container">
  <p><b>Product type name: </b> <%= @resource.name %></p>
  <%= link_to "Back", product_types_path, class: 'btn btn-sm btn-info' %>
  <%= link_to "Edit", edit_product_type_path(@resource), class: 'btn btn-sm btn-primary' %>
  <%= link_to "Delete", product_type_path(@resource), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
</div>

