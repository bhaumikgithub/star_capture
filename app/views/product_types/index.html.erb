<div class="container">
  <h2>Product Type Listing</h2>
  <div class="col-12">
    <%= link_to "New Product Type", new_product_type_path, class: "btn  btn-outline-secondary btn-sm float-right mb-2" %>
  </div>
  <table class=" table table-striped sortable">
    <thead>
      <tr>
        <th>Product type name</th>
        <th>Created Time</th>
        <th colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |product_type| %>
        <tr>
          <td><%= link_to product_type.name, product_type_path(product_type) %></td>
          <td><%= product_type.created_at.strftime("%d-%b-%-y") %></td>
          <td><%= link_to "View", product_type_path(product_type) %></td>
          <td><%= link_to("Edit", edit_product_type_path(product_type)) %></td>
          <td><%= link_to "Delete", product_type_path(product_type), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="paginate">
    <%= paginate @resources, theme: 'twitter-bootstrap-4' %>
  </div>
</div>