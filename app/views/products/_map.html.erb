<div id="product" data-product-id="<%= @resource.id %>" data-latitude="<%= @resource.latitude %>" data-longitude="<%= @resource.longitude %>"></div>

<div id="map_wrapper" style='width: 800px;'>
  <% if params[:action] == 'show' %>
    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@resource.latitude},#{@resource.longitude}&markers=#{@resource.latitude},#{@resource.longitude}&zoom=15&size=640x400&key=AIzaSyAimpQrqnB_pftBReNA94ZGYc7HPXYbqPw",
              class: 'img-fluid img-rounded', alt: "#{@resource.name} on the map"%>
  <% else %>
    <div id="map" style='width: 800px; height: 400px;'></div>
  <% end %>
  <div class='row'>
    <div class="col-12">
      <div class="form-group">
        <label for="product_address">Address</label>
        <% if params[:action] == 'edit' %>
          <input class="form-control" type="text" value='<%= @resource.address %>'  id="product_address" placeholder="Enter a location" autocomplete="off">
        <% else %>
          <input class="form-control" readonly="readonly" type="text" value='<%= @resource.address %>'>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <div class="form-group">
        <label for="product_city">City</label>
        <input readonly="readonly" class="form-control" type="text" value='<%= @resource.city %>'  id="product_city">
      </div>

      <div class="form-group">
        <label >State</label>
        <input readonly="readonly" class="form-control" type="text" value='<%= @resource.state %>' id="product_state">
      </div>
    </div>
    <div class="col-6">
      <div class="form-group">
        <label>Country</label>
        <input readonly="readonly" class="form-control" type="text" value='<%= @resource.country %>'  id="product_country">
      </div>

      <div class="form-group">
        <label>Pincode</label>
        <input class="form-control" type="text" value='<%= @resource.pincode %>'  id="product_pincode">
      </div>
    </div>
  </div>
