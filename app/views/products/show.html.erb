<div id="product" data-product-id="<%= @resource.id %>" data-latitude="<%= @resource.latitude %>" data-longitude="<%= @resource.longitude %>"></div>
<div class="row">
  <div class="col">
     <div class="wrap">
        <div class="mb-3"><p><b>Procuct name: </b> <%= @resource.name %></p></div>
        <div class="mb-3"><p><b>Product price: </b><%= @resource.price %></p></div>
        <div class="mb-3"><p><b>Prodcut Categories</b> <%= @resource.categories.map { |e| e.name  }.join(', ') %></p></div>
        <div class="">
          <div class="d-block align-top mb-3"><b>Product Images:</b></div>
            <div class="d-block align-top">
              <% @resource.images.each do |image| %>
                <div class="d-inline-block ">
                  <%= image_tag image, class: 'product_image_size mr-3' %>
                  <span class="d-block">
                  <%= link_to 'delete', delete_image_product_path(@resource, image),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
                  </span>
                </div>
              <% end %>
            </div>
        </div>
        <div class="mt-4">
          <%= link_to "Back", products_path, class: 'btn btn-sm btn-info' %>
          <td><%= link_to "Edit", edit_product_path(@resource) , class: 'btn btn-sm btn-primary'  %></td>
          <td><%= link_to "Delete", product_path(@resource), method: :delete, data: {confirm: "Are you sure?"},class: 'btn btn-sm btn-danger' %></td>
        </div>
      </div>
    </div>
</div>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<br>

<%=  bootstrap_form_for @resource, url: {controller: 'products', action: 'update_address'}  do |f| %>
  <div class='row'>
    <div class="col-6">
      <%= f.text_field :city, readonly: true %>
      <%= f.text_field :state, readonly: true %>
    </div>
    <div class="col-6">
      <%= f.text_field :country, readonly: true %>
      <%= f.text_field :pincode %>
    </div>
  </div>
  <%= f.submit 'Update location' %>
<% end %>
