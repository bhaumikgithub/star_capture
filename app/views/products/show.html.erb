<div id="product" data-product-id="<%= @resource.id %>" data-latitude="<%= @resource.latitude %>" data-longitude="<%= @resource.longitude %>"></div>
<div class="row">
  <div class="col">
     <div class="wrap">
        <div class="mb-3"><p><b>Procuct name: </b> <%= @resource.name %></p></div>
        <div class="mb-3"><p><b>Product price: </b><%= @resource.price %></p></div>
        <div class="mb-3"><p><b>Prodcut Categories</b> <%= @resource.categories.map { |e| e.name  }.join(', ') %></p></div>
        <div class="">
          <div class="d-block align-top mb-3"><b>Product Images:</b></div>
            <div class="d-block align-top">
              <% @resource.images.each do |image| %>
                <div class="d-inline-block ">
                  <%= image_tag image, class: 'product_image_size mr-3' %>
                  <span class="d-block">
                  <%= link_to 'delete', delete_image_product_path(@resource, image),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
                  </span>
                </div>
              <% end %>
            </div>
        </div>
        <div class="mt-4">
          <%= link_to "Back", products_path, class: 'btn btn-sm btn-info' %>
          <td><%= link_to "Edit", edit_product_path(@resource) , class: 'btn btn-sm btn-primary'  %></td>
          <td><%= link_to "Delete", product_path(@resource), method: :delete, data: {confirm: "Are you sure?"},class: 'btn btn-sm btn-danger' %></td>
        </div>
      </div>
    </div>
</div>
<br><br>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<br>


<div class='row'>
  <div class="col-12">
    <div class="form-group">
      <label for="product_address">Address</label>
      <input class="form-control" type="text" value= <%= @resource.address %>  id="product_address" placeholder="Enter a location" autocomplete="off">
    </div>
  </div>
  <div class="col-6">
    <div class="form-group">
      <label for="product_city">City</label>
      <input readonly="readonly" class="form-control" type="text" value=<%= @resource.city %>  id="product_city">
    </div>

    <div class="form-group">
      <label >State</label>
      <input readonly="readonly" class="form-control" type="text" value= <%= @resource.state %> id="product_state">
    </div>
  </div>
  <div class="col-6">
    <div class="form-group">
      <label>Country</label>
      <input readonly="readonly" class="form-control" type="text" value=<%= @resource.country %>  id="product_country">
    </div>

    <div class="form-group">
      <label>Pincode</label>
      <input class="form-control" type="text" value=<%= @resource.pincode %>  id="product_pincode">
    </div>

  </div>
</div>
