<div class="container">
  <div class="col-12">
    <%= link_to "New Product", new_product_path, class: "btn btn-success btn-sm pull-right" %>
  </div>
  <table class=" table table-striped sortable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Categories</th>
      </tr>
    </thead>

   <tbody>
     <% @resources.each do |product| %>
       <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= product.categories.map { |e| e.name }.join(', ') %></td>
        <td><%= link_to("Edit", edit_product_path(product)) %></td>
        <td><%= link_to("Delete", product_path(product), method: :delete) %></td>
      </tr>
     <% end %>
   </tbody>
  </table>
 </div>
<div id="paginate">
  <%= paginate @resources, theme: 'twitter-bootstrap-4' %>
</div>