<div class="container">
  <h2>Transport Type Listing</h2>
  <div class="col-12">
    <% if current_user.user? %>
      <%= link_to "New Transport Type", new_transport_type_path, class: "btn  btn-outline-secondary btn-sm float-right mb-2"%>
    <% end %>
  </div>
  <table class=" table table-striped sortable">
    <thead>
      <tr>
        <th>Transport type name</th>
        <th>Created Time</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |transport_type| %>
        <tr>
          <td><%= link_to transport_type.name, transport_type_path(transport_type) %></td>
          <td><%= transport_type.created_at.strftime("%d-%b-%-y") %></td>
          <% if current_user.user? %>
            <td><%= link_to "Edit", edit_transport_type_path(transport_type) %></td>
            <td><%= link_to "View", transport_type_path(transport_type) %></td>
            <td><%= link_to "Delete", transport_type_path(transport_type), method: :delete, data: {confirm: "Are you sure?"} %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="paginate">
    <%= paginate @resources, theme: 'twitter-bootstrap-4' %>
  </div>
</div>