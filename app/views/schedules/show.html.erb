<div class="container">
  <p><b>Schedule name: </b> <%= @resource.name %></p>
  <%= link_to "Back", schedules_path, class: 'btn btn-sm btn-info' %>
  <%= link_to "Edit", edit_schedule_path(@resource), class: 'btn btn-sm btn-primary' %>
  <%= link_to "Delete", schedule_path(@resource), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
</div>

